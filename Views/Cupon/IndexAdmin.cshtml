@model IEnumerable<Plantilla.Models.Cupon>
@{
    Layout = "~/Views/Shared/_LayoutColaboradores.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idCupon }) |
                @Html.ActionLink("Details", "Details", new { id = item.idCupon }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idCupon })
            </td>
        </tr>
    }

</table>
