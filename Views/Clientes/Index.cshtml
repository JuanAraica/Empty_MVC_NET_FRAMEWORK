@model IEnumerable<Plantilla.Models.Clientes>

@{
    Layout = "~/Views/Shared/_LayoutColaboradores.cshtml";
}

<h2>Usuarios Registrados</h2>
@Html.Action("Create", "Clientes")

<table class="table" width="100%" border="1">
    <thead style="background:#808080" align="center">
        <tr>
            <th>
                <strong>E-mail</strong>
            </th>
            <th>
                <strong>Name</strong>
            </th>
 
            <th>
                <strong>Country</strong>
            </th>
            <th>
                <strong>Direction</strong>
            </th>
            <th>
                Photo
            </th>
            <th>
                <strong>Phone</strong>
            </th>
            <td colspan="3">Actions</td>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
<tbody  align="center">
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.apellido1) @Html.DisplayFor(modelItem => item.apellido2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            <img width="50" height="50" src="@Url.Action("convertirImagen", "Clientes", new {idCliente = item.idCliente})" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>

        <td>
            <div class="btn btn-dark-green">
                @Html.ActionLink("Edit", "Edit", new { id = item.idCliente })
            </div>
        </td>
        <td>
            <div class="btn btn-yellow">
                @Html.ActionLink("Details", "Details", new { id = item.idCliente })
            </div>
        </td>
        <td>
            <div class="btn btn-danger">
                @Html.ActionLink("Delete", "Delete", new { id = item.idCliente })
            </div>
        </td>
    </tr>
</tbody>
        }

</table>
