@model IEnumerable<Plantilla.Models.Colaborador>
@{
    Layout = "~/Views/Shared/_LayoutColaboradores.cshtml";
}



@Html.Action("Create","Colaborador")



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cedula
        </th>
        <th>
            Nombre
        </th>
        <th>
            Lenguajes
        </th>
        <th>
            Nacionalidad
        </th>
        <th>
            Telefono
        </th>
        <th>
            E-mail
        </th>
        <th>
            Licencia
        </th>
        <th>
            Foto
        </th>
        <th>
            Tipo De Colaborador
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CedColaborador)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.apellido1) @Html.DisplayFor(modelItem => item.apellido2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.idiomas)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nacionalidad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.telefono)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @{ if (item.licencia == "null")
            {
                item.licencia = "No aplica";
            }

        }
        @Html.DisplayFor(modelItem => item.licencia)
    </td>
    <td>
        <img width="50" height="50" src="@Url.Action("convertirImagen", "Colaborador", new {idColaborador = item.idColaborador})" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tipoColaborador)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.idColaborador }) |
        @Html.ActionLink("Details", "Details", new { id = item.idColaborador }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.idColaborador })
    </td>
</tr>
    }

</table>
